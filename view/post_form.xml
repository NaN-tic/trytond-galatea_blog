<form string="Post" col="6">
    <label name="name"/>
    <field name="name"/>
    <label name="slug"/>
    <field name="slug"/>
    <label name="active"/>
    <field name="active"/>
    <label name="canonical_uri"/>
    <field name="canonical_uri"/>
    <notebook colspan="6">
        <page string="Descriptions" id="descriptions">
            <field name="description" colspan="4"/>
            <separator name="long_description" colspan="4"/>
            <field name="long_description" colspan="4"/>
            <label name="markup"/>
            <field name="markup"/>
        </page>
        <page string="SEO" id="seo">
            <label name="metadescription"/>
            <field name="metadescription"/><newline/>
            <label name="metakeywords"/>
            <field name="metakeywords"/><newline/>
            <label name="metatitle"/>
            <field name="metatitle"/><newline/>
        </page>
        <page string="Info" id="info" col="6">
            <label name="post_create_date"/>
            <field name="post_create_date"/>
            <label name="post_write_date"/>
            <field name="post_write_date"/>
            <label name="post_published_date"/>
            <field name="post_published_date"/>
            <separator name="tags" colspan="6"/>
            <field name="tags" colspan="6"/>
        </page>
        <page string="Extra" id="extra">
            <label name="user"/>
            <field name="user"/>
            <label name="visibility"/>
            <field name="visibility"/>
            <label name="gallery"/>
            <field name="gallery"/>
            <label name="comment"/>
            <field name="comment"/>
            <separator name="websites" colspan="4"/>
            <field name="websites" colspan="4"/>
            <separator name="uris" colspan="4"/>
            <field name="uris" colspan="4"/>
        </page>
        <page string="Attachments" id="attachments">
            <field name="attachments" colspan="6"/>
        </page>
    </notebook>
</form>
